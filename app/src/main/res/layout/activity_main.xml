<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_loginpage"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        app:srcCompat="@drawable/instagram_logo"
         />


    <EditText
        android:id="@+id/username_id"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="201dp"
        android:ems="10"
        android:hint="Enter Username"
        android:inputType="textPersonName"
        android:textColor="#cccccc"
        android:textColorHint="#cccccc" />

    <EditText
        android:id="@+id/pass_id"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/username_id"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Enter Password"
        android:inputType="textPassword"
        android:textColor="#cccccc"
        android:textColorHint="#cccccc" />


    <Button
        android:id="@+id/login_id"
        android:layout_width="157dp"
        android:layout_height="38dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="145dp"
        android:background="@android:color/holo_purple"
        android:onClick="signInClicked"
        android:text="Sign In"
        android:textColor="#cccccc"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/changeModeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login_id"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="38dp"
        android:text="or Signup"
        android:textColor="#cccccc"
        android:textSize="16sp" />

</RelativeLayout>